extends layout

block content
  div(class="b-search")
    h1(class="b-search__t")= title
    form(class="input-group input-group-lg" name="search" action="/search" type="post")
        input(type="text" class="form-control" placeholder="Введите название технологии" name="query")
        div(class="input-group-addon b-search__bt")
          span(class="glyphicon glyphicon-search")
  div(class="b-result")
